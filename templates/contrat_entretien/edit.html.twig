{% extends 'base.html.twig' %}

{% block title %}Modifier contrat n°{{ contrat.numero_contrat }} — {{ agency.nom ?? agencyCode }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    {# === BREADCRUMB === #}
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_contrat_entretien_index', {agencyCode: agencyCode}) }}">Contrats {{ agencyCode }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_contrat_entretien_show', {agencyCode: agencyCode, id: contrat.id}) }}">Contrat n°{{ contrat.numero_contrat }}</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>
    </nav>

    {# === TITRE + BOUTON RETOUR === #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-pencil-square"></i>
            Modifier contrat n°{{ contrat.numero_contrat }} — {{ agency.nom ?? agencyCode }}
        </h1>
        <a href="{{ path('app_contrat_entretien_show', {agencyCode: agencyCode, id: contrat.id}) }}" class="btn btn-outline-secondary">
            ← Retour
        </a>
    </div>

    {# === FLASH MESSAGES === #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# === BANDEAU CLIENT === #}
    {% if clientInfo %}
    <div class="card border-primary mb-4">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-auto">
                    <span class="badge bg-primary">Client lié</span>
                </div>
                <div class="col">
                    <strong>{{ clientInfo.raison_sociale ?? clientInfo.nom }}</strong>
                    {% if clientInfo.villep %}
                        — {{ clientInfo.cpostalp ?? '' }} {{ clientInfo.villep }}
                    {% endif %}
                    <span class="text-muted ms-2">(ID: {{ contrat.contact_id }}, id_contact: {{ contrat.id_contact }})</span>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# === PDF ACTUEL === #}
    {% if contrat.contrat_pdf_path %}
    <div class="alert alert-info d-flex align-items-center mb-4">
        <i class="bi bi-file-earmark-pdf me-2 fs-5"></i>
        <div>
            <strong>PDF actuel :</strong> {{ contrat.contrat_pdf_path }}
            <br><small class="text-muted">Un nouvel upload remplacera ce fichier.</small>
        </div>
    </div>
    {% endif %}

    {# === FORMULAIRE === #}
    {{ form_start(form, {attr: {class: 'needs-validation', novalidate: 'novalidate', enctype: 'multipart/form-data'}}) }}

        <div class="card mb-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">Informations du contrat</h5>
            </div>
            <div class="card-body">
                {% include 'contrat_entretien/_form_contrat.html.twig' %}
            </div>
        </div>

        {# === BOUTONS === #}
        <div class="d-flex justify-content-between">
            <a href="{{ path('app_contrat_entretien_show', {agencyCode: agencyCode, id: contrat.id}) }}"
               class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Annuler
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-lg"></i> Enregistrer les modifications
            </button>
        </div>

    {{ form_end(form) }}

</div>
{% endblock %}