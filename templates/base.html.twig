<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SOMAFI - Gestion Parc{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        :root {
            --somafi-primary: #1a5276;
            --somafi-secondary: #2980b9;
            --somafi-success: #28a745;
            --somafi-warning: #fd7e14;
            --somafi-danger: #dc3545;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }
        
        .navbar-somafi {
            background-color: var(--somafi-primary);
        }
        
        .sidebar {
            min-height: calc(100vh - 56px);
            background-color: #fff;
            border-right: 1px solid #dee2e6;
        }
        
        .sidebar .nav-link {
            color: #333;
            padding: 0.75rem 1rem;
        }
        
        .sidebar .nav-link:hover {
            background-color: #e9ecef;
        }
        
        .sidebar .nav-link.active {
            background-color: var(--somafi-primary);
            color: #fff;
        }
        
        .card-stats {
            border-left: 4px solid var(--somafi-primary);
        }
        
        .badge-status-a { background-color: var(--somafi-success); }
        .badge-status-b { background-color: var(--somafi-warning); }
        .badge-status-c { background-color: var(--somafi-danger); }
        .badge-status-d, .badge-status-e, .badge-status-f, .badge-status-g { background-color: #343a40; }
        
        .table-equipment th {
            background-color: var(--somafi-primary);
            color: #fff;
            font-weight: 500;
        }
        
        .btn-somafi {
            background-color: var(--somafi-primary);
            border-color: var(--somafi-primary);
            color: #fff;
        }
        
        .btn-somafi:hover {
            background-color: var(--somafi-secondary);
            border-color: var(--somafi-secondary);
            color: #fff;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-somafi">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <i class="bi bi-building"></i> SOMAFI GROUP
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="bi bi-house"></i> Accueil
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_users') }}">
                                <i class="bi bi-people"></i> Utilisateurs
                            </a>
                        </li>
                        {% endif %}
                        {# Menu Contrats Entretien #}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_AGENCE') or is_granted('ROLE_GESTIONNAIRE_CONTRAT') %}
                            {% if contratEntretienAgencies is not empty %}
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-file-earmark-text"></i> Contrats Entretien
                                    </a>
                                    <ul class="dropdown-menu">
                                        {% for code in contratEntretienAgencies %}
                                            <li>
                                                <a class="dropdown-item" href="{{ path('app_contrat_entretien_index', {agencyCode: code}) }}">
                                                    <i class="bi bi-building"></i> {{ code }}
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endif %}
                        {% endif %}
                        {# Menu Contrats Cadre
                             Visible si l'utilisateur a au moins un CC dans contrats_cadre_actifs
                             (injecté par ContratCadreExtension selon ses droits réels) #}
                        {% if contrats_cadre_actifs is not empty %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"  data-turbo="false">
                                    <i class="bi bi-briefcase"></i> Contrats Cadre
                                </a>
                                <ul class="dropdown-menu">
                                    {% for cc in contrats_cadre_actifs %}
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_contrat_cadre_sites', {slug: cc.slug}) }}">
                                                <span style="display:inline-block;width:10px;height:10px;border-radius:50%;background:{{ cc.primaryColor ?? '#666' }};margin-right:8px;"></span>
                                                {{ cc.nom }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
                
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"  data-turbo="false">
                                <i class="bi bi-person-circle"></i> {{ app.user.fullName }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text text-muted">{{ app.user.email }}</span></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                                    </a>
                                </li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show m-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Main content -->
    <main>
        {% block body %}{% endblock %}
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Réinitialisation des composants Bootstrap après navigation Turbo -->
    <script>
    document.addEventListener('turbo:load', function() {
        document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function(el) {
            new bootstrap.Dropdown(el);
        });
    });
    </script>

    {% block javascripts %}{% endblock %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
</body>
</html>
