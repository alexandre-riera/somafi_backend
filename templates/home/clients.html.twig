{% extends 'base.html.twig' %}

{% block title %}Clients - {{ agency.nom }} ({{ agency.code }}){% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# En-tête avec breadcrumb #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ agency.nom }}</li>
        </ol>
    </nav>

    {# Titre de la page #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">
                <i class="bi bi-building me-2"></i>
                {{ agency.nom }}
            </h1>
            <p class="text-muted mb-0">
                <span class="badge bg-secondary">{{ agency.code }}</span>
                &nbsp;•&nbsp;
                <span id="clientCount">{{ total_clients }}</span> client{{ total_clients > 1 ? 's' : '' }}
            </p>
        </div>
        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Retour
        </a>
    </div>

    {# Barre de recherche dynamique (JS) #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" 
                               id="searchInput"
                               class="form-control form-control-lg" 
                               placeholder="Rechercher par nom, ville, code postal ou ID contact..."
                               autocomplete="off">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="button" id="btnClearSearch" class="btn btn-outline-secondary btn-lg w-100" style="display:none;">
                        <i class="bi bi-x-circle me-1"></i> Effacer
                    </button>
                </div>
            </div>
            <div id="searchInfo" class="mt-2" style="display:none;">
                <span class="text-muted">
                    <span id="filteredCount">0</span> résultat(s) pour "<span id="searchTerm"></span>"
                </span>
            </div>
        </div>
    </div>

    {# Liste des clients #}
    {% if clients is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Aucun client trouvé pour cette agence.
        </div>
    {% else %}
        {# Message quand la recherche ne donne rien #}
        <div class="alert alert-info" id="noResultsAlert" style="display:none;">
            <i class="bi bi-info-circle me-2"></i>
            Aucun client trouvé pour cette recherche.
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0" id="clientsTable">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" style="width: 35%;">
                                <i class="bi bi-building me-1"></i> Client
                            </th>
                            <th scope="col" style="width: 25%;">
                                <i class="bi bi-geo-alt me-1"></i> Localisation
                            </th>
                            <th scope="col" style="width: 15%;" class="text-center">
                                <i class="bi bi-gear me-1"></i> Équipements
                            </th>
                            <th scope="col" style="width: 15%;" class="text-center">
                                <i class="bi bi-person-badge me-1"></i> ID Contact
                            </th>
                            <th scope="col" style="width: 10%;" class="text-center">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr class="client-row" 
                                data-href="{{ path('app_client_equipments', {agencyCode: agencyCode, idContact: client.id_contact}) }}"
                                data-search="{{ client.raison_sociale|lower }} {{ client.ville|lower }} {{ client.code_postal }} {{ client.id_contact }}"
                                style="cursor: pointer;">
                                <td>
                                    <div class="fw-semibold text-primary">
                                        {{ client.raison_sociale }}
                                    </div>
                                    {% if client.telephone is defined and client.telephone %}
                                        <small class="text-muted">
                                            <i class="bi bi-telephone me-1"></i>{{ client.telephone }}
                                        </small>
                                    {% endif %}
                                </td>
                                <td>
                                    <div>{{ client.ville }}</div>
                                    <small class="text-muted">{{ client.code_postal }}</small>
                                </td>
                                <td class="text-center">
                                    {% if client.nb_equipements > 0 %}
                                        <span class="badge bg-success fs-6">
                                            {{ client.nb_equipements }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">0</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">
                                        #{{ client.id_contact }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('app_client_equipments', {agencyCode: agencyCode, idContact: client.id_contact}) }}" 
                                       class="btn btn-sm btn-outline-primary"
                                       title="Voir les équipements">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Info bas de page #}
        <div class="text-muted text-center mt-3">
            <small>
                <i class="bi bi-info-circle me-1"></i>
                Données récupérées depuis Kizeo Forms en temps réel
            </small>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('turbo:load', function() {
        const searchInput = document.getElementById('searchInput');
        const btnClear = document.getElementById('btnClearSearch');
        const searchInfo = document.getElementById('searchInfo');
        const filteredCount = document.getElementById('filteredCount');
        const searchTerm = document.getElementById('searchTerm');
        const noResultsAlert = document.getElementById('noResultsAlert');
        const rows = document.querySelectorAll('.client-row');
        const clientCount = document.getElementById('clientCount');
        const totalClients = rows.length;

        // Recherche dynamique
        searchInput.addEventListener('input', function() {
            const query = this.value.trim().toLowerCase();
            let visible = 0;

            rows.forEach(row => {
                const data = row.dataset.search || '';
                const match = !query || data.includes(query);
                row.style.display = match ? '' : 'none';
                if (match) visible++;
            });

            // Mise à jour de l'UI
            if (query) {
                btnClear.style.display = '';
                searchInfo.style.display = '';
                filteredCount.textContent = visible;
                searchTerm.textContent = this.value.trim();
                clientCount.textContent = visible;
            } else {
                btnClear.style.display = 'none';
                searchInfo.style.display = 'none';
                clientCount.textContent = totalClients;
            }

            // Message "aucun résultat"
            if (noResultsAlert) {
                noResultsAlert.style.display = (query && visible === 0) ? '' : 'none';
            }
        });

        // Bouton effacer
        btnClear.addEventListener('click', function() {
            searchInput.value = '';
            searchInput.dispatchEvent(new Event('input'));
            searchInput.focus();
        });

        // Rendre les lignes cliquables
        rows.forEach(row => {
            row.addEventListener('click', function(e) {
                if (e.target.closest('a, button')) return;
                window.location.href = this.dataset.href;
            });
        });
    });
</script>
{% endblock %}
