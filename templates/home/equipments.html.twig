{% extends 'base.html.twig' %}

{% block title %}{{ client.raison_sociale }} - Équipements{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Breadcrumb #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_clients_list', {agencyCode: agencyCode}) }}">{{ agency.nom }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ client.raison_sociale }}</li>
        </ol>
    </nav>

    {# En-tête client #}
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="h3 mb-2">
                        <i class="bi bi-building me-2 text-primary"></i>
                        {{ client.raison_sociale }}
                    </h1>
                    <div class="text-muted">
                        {% if client.adresse is defined and client.adresse %}
                            <p class="mb-1">
                                <i class="bi bi-geo-alt me-1"></i>
                                {{ client.adresse }}
                                {% if client.adresse2 is defined and client.adresse2 %}<br>{{ client.adresse2 }}{% endif %}
                            </p>
                        {% endif %}
                        <p class="mb-1">
                            <strong>{{ client.code_postal }}</strong> {{ client.ville }}
                        </p>
                        {% if client.telephone is defined and client.telephone %}
                            <p class="mb-1">
                                <i class="bi bi-telephone me-1"></i> {{ client.telephone }}
                            </p>
                        {% endif %}
                        {% if client.email is defined and client.email %}
                            <p class="mb-0">
                                <i class="bi bi-envelope me-1"></i> 
                                <a href="mailto:{{ client.email }}">{{ client.email }}</a>
                            </p>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="badge bg-secondary fs-6 mb-2">{{ agency.code }}</span>
                    <br><span class="badge bg-primary" title="ID Contact">Contact #{{ client.id_contact }}</span>
                    {% if client.id_societe %}
                        <br><span class="badge bg-info mt-1" title="ID Société GESTAN">Société #{{ client.id_societe }}</span>
                    {% endif %}
                    <div class="mt-3">
                        <a href="{{ path('app_clients_list', {agencyCode: agencyCode}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i> Retour liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Filtres Année / Visite #}
    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-funnel me-2"></i> Filtres de visite
        </div>
        <div class="card-body">
            <form method="get" action="{{ path('app_client_equipments', {agencyCode: agencyCode, idContact: client.id_contact}) }}" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="anneeSelect" class="form-label fw-semibold">
                        <i class="bi bi-calendar me-1"></i> Année
                    </label>
                    <select name="annee" id="anneeSelect" class="form-select form-select-lg">
                        {% for year in available_years %}
                            <option value="{{ year }}" {{ year == annee ? 'selected' : '' }}>
                                {{ year }}
                            </option>
                        {% else %}
                            <option value="{{ annee }}">{{ annee }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="visiteSelect" class="form-label fw-semibold">
                        <i class="bi bi-clipboard-check me-1"></i> Visite
                    </label>
                    <select name="visite" id="visiteSelect" class="form-select form-select-lg">
                        {% for visit in available_visits %}
                            <option value="{{ visit }}" {{ visit == visite ? 'selected' : '' }}>
                                {{ visit }}
                            </option>
                        {% else %}
                            <option value="{{ visite }}">{{ visite }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-filter me-1"></i> Filtrer
                    </button>
                </div>
            </form>
            
            {% if last_visit.date %}
                <div class="mt-3 text-muted">
                    <small>
                        <i class="bi bi-clock-history me-1"></i>
                        Dernière visite : <strong>{{ last_visit.visite }}</strong> {{ last_visit.annee }}
                        {% if last_visit.date %}
                            ({{ last_visit.date|date('d/m/Y') }})
                        {% endif %}
                    </small>
                </div>
            {% endif %}
        </div>
    </div>

    {# Zone d'actions #}
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex flex-wrap gap-3">
            {# Bouton Nouvel équipement (ROLE_EDIT / ROLE_ADMIN / ROLE_ADMIN_AGENCE) #}
            {% if is_granted('ROLE_EDIT') or is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_AGENCE') %}
                <a href="{{ path('app_equipment_new', {agencyCode: agencyCode, idContact: client.id_contact, annee: annee, visite: visite}) }}" 
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Nouvel équipement
                </a>
            {% endif %}

            <button type="button" class="btn btn-success" id="btnGeneratePdf">
                <i class="bi bi-file-pdf me-1"></i> Générer PDF complet
            </button>
            <div class="form-check form-switch align-self-center ms-2">
                <input class="form-check-input" type="checkbox" id="includePhotos" checked>
                <label class="form-check-label" for="includePhotos">Inclure les photos</label>
            </div>
        </div>
    </div>

    {# Card CR Techniciens (PDF Kizeo) #}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info bg-opacity-10 d-flex align-items-center">
            <i class="bi bi-file-earmark-pdf me-2 text-info"></i>
            <strong>CR Techniciens</strong>
            {% if technician_reports|length > 0 %}
                <span class="badge bg-info ms-2">{{ technician_reports|length }}</span>
            {% endif %}
            <small class="text-muted ms-auto">{{ visite }} {{ annee }}</small>
        </div>

        {% if technician_reports|length > 0 %}
            <ul class="list-group list-group-flush">
                {% for cr in technician_reports %}
                    <li class="list-group-item d-flex align-items-center py-3">
                        <div class="me-3">
                            <i class="bi bi-file-pdf fs-4 text-danger"></i>
                        </div>
                        <div class="flex-grow-1 min-width-0">
                            <div class="fw-semibold text-truncate" title="{{ cr.local_path|split('/')|last }}">
                                {{ cr.local_path|split('/')|last }}
                            </div>
                            <small class="text-muted">
                                {% if cr.file_size %}
                                    {{ (cr.file_size / 1048576)|number_format(1) }} MB
                                {% endif %}
                                {% if cr.completed_at %}
                                    · Téléchargé le {{ cr.completed_at|date('d/m/Y à H:i') }}
                                {% endif %}
                            </small>
                        </div>
                        <div class="d-flex gap-2 ms-3">
                            <a href="{{ path('app_download_technician_cr', {agencyCode: agencyCode, jobId: cr.id}) }}"
                            class="btn btn-outline-primary btn-sm"
                            target="_blank"
                            title="Consulter dans le navigateur">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_download_technician_cr', {agencyCode: agencyCode, jobId: cr.id}) }}?mode=download"
                            class="btn btn-outline-success btn-sm"
                            title="Télécharger">
                                <i class="bi bi-download"></i>
                            </a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="card-body text-center text-muted py-4">
                <i class="bi bi-clock-history fs-3 d-block mb-2"></i>
                Aucun CR technicien disponible pour {{ visite }} {{ annee }}
                <br><small>Les PDF sont en cours de téléchargement depuis Kizeo</small>
            </div>
        {% endif %}
    </div>

    {# Compteurs (basés sur les totaux, pas la page courante) #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h2 class="display-6 mb-0 text-primary">{{ equipment_stats.total }}</h2>
                    <small class="text-muted">Équipements total</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success bg-opacity-10">
                <div class="card-body text-center">
                    <h2 class="display-6 mb-0 text-success">{{ equipment_stats.au_contrat }}</h2>
                    <small class="text-muted">Au contrat</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning bg-opacity-10">
                <div class="card-body text-center">
                    <h2 class="display-6 mb-0 text-warning">{{ equipment_stats.hors_contrat }}</h2>
                    <small class="text-muted">Hors contrat</small>
                </div>
            </div>
        </div>
    </div>

    {# Tableau des équipements #}
    {% if equipments is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Aucun équipement trouvé pour cette visite ({{ visite }} {{ annee }}).
        </div>
    {% else %}
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-gear me-2"></i> 
                    Équipements - {{ visite }} {{ annee }}
                </span>
                <small class="text-muted">
                    Page {{ current_page }} / {{ total_pages }}
                    ({{ equipment_stats.total }} équipement{{ equipment_stats.total > 1 ? 's' : '' }})
                </small>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 4%;">#</th>
                            <th style="width: 10%;">Numéro</th>
                            <th style="width: 16%;">Libellé</th>
                            <th style="width: 8%;">Marque</th>
                            <th style="width: 4%;">Statut</th>
                            <th style="width: 18%;">État</th>
                            <th style="width: 18%;">Anomalies</th>
                            <th style="width: 8%;">Type</th>
                            <th style="width: 14%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for equip in equipments %}
                            <tr class="{{ equip.is_hors_contrat ? 'table-warning' : '' }}">
                                <td class="text-muted">{{ pagination_offset + loop.index }}</td>
                                <td>
                                    <strong>{{ equip.numero_equipement }}</strong>
                                    {% if equip.numero_equipement_client %}
                                        <br><small class="text-muted" title="N° client">{{ equip.numero_equipement_client }}</small>
                                    {% endif %}
                                </td>
                                <td>{{ equip.libelle_equipement }}</td>
                                <td>{{ equip.marque ?: '—' }}</td>

                                {# Colonne Statut — Logo PNG #}
                                <td class="text-center">
                                    {% set statut = equip.statut_equipement|default('') %}
                                    {% if statut == 'A' %}
                                        <img src="{{ asset('img/logos-statut/vert.png') }}" alt="Bon état" title="A — Bon état de fonctionnement" width="24" height="24">
                                    {% elseif statut == 'B' %}
                                        <img src="{{ asset('img/logos-statut/orange.png') }}" alt="Préventif" title="B — Travaux préventifs" width="24" height="24">
                                    {% elseif statut == 'C' %}
                                        <img src="{{ asset('img/logos-statut/rouge.png') }}" alt="Curatif" title="C — Travaux curatifs" width="24" height="24">
                                    {% elseif statut == 'D' %}
                                        <img src="{{ asset('img/logos-statut/inaccessible.png') }}" alt="Inaccessible" title="D — Inaccessible le jour de la visite" width="24" height="24">
                                    {% elseif statut == 'E' %}
                                        <img src="{{ asset('img/logos-statut/arret.png') }}" alt="À l'arrêt" title="E — À l'arrêt le jour de la visite" width="24" height="24">
                                    {% elseif statut == 'F' %}
                                        <img src="{{ asset('img/logos-statut/arret.png') }}" alt="Mis à l'arrêt" title="F — Mis à l'arrêt lors de l'intervention" width="24" height="24">
                                    {% elseif statut == 'G' %}
                                        <img src="{{ asset('img/logos-statut/noir.png') }}" alt="Non présent" title="G — Non présent sur site" width="24" height="24">
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>

                                {# Colonne État — Texte etat_equipement #}
                                <td>
                                    {% if equip.etat_equipement %}
                                        <small>{{ equip.etat_equipement }}</small>
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>

                                {# Colonne Anomalies #}
                                <td>
                                    {% if equip.anomalies %}
                                        <small class="text-danger">{{ equip.anomalies|slice(0, 100) }}{% if equip.anomalies|length > 100 %}...{% endif %}</small>
                                    {% else %}
                                        <span class="text-success"><i class="bi bi-check"></i> RAS</span>
                                    {% endif %}
                                </td>

                                {# Colonne Type #}
                                <td>
                                    {% if equip.is_hors_contrat %}
                                        <span class="badge bg-warning text-dark">HC</span>
                                    {% else %}
                                        <span class="badge bg-success">AC</span>
                                    {% endif %}
                                </td>

                                {# Colonne Actions — Edit + Delete (selon rôles) #}
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        {% if is_granted('ROLE_EDIT') or is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_AGENCE') %}
                                            <a href="{{ path('app_equipment_edit', {agencyCode: agencyCode, idContact: client.id_contact, equipId: equip.id}) }}"
                                               class="btn btn-outline-primary" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}

                                        {% if is_granted('ROLE_DELETE') or is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_AGENCE') %}
                                            <button type="button" class="btn btn-outline-danger"
                                                    title="Archiver"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-equip-id="{{ equip.id }}"
                                                    data-equip-numero="{{ equip.numero_equipement }}"
                                                    data-equip-libelle="{{ equip.libelle_equipement }}">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            {% if total_pages > 1 %}
                <div class="card-footer">
                    <nav aria-label="Pagination équipements">
                        <ul class="pagination pagination-sm justify-content-center mb-0">
                            {# Bouton Précédent #}
                            <li class="page-item {{ current_page <= 1 ? 'disabled' : '' }}">
                                <a class="page-link" 
                                   href="{{ path('app_client_equipments', {
                                       agencyCode: agencyCode,
                                       idContact: client.id_contact,
                                       annee: annee,
                                       visite: visite,
                                       page: current_page - 1
                                   }) }}"
                                   aria-label="Précédent">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            {# Pages #}
                            {% set start_page = max(1, current_page - 2) %}
                            {% set end_page = min(total_pages, current_page + 2) %}

                            {% if start_page > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_client_equipments', {
                                        agencyCode: agencyCode,
                                        idContact: client.id_contact,
                                        annee: annee,
                                        visite: visite,
                                        page: 1
                                    }) }}">1</a>
                                </li>
                                {% if start_page > 2 %}
                                    <li class="page-item disabled"><span class="page-link">…</span></li>
                                {% endif %}
                            {% endif %}

                            {% for p in start_page..end_page %}
                                <li class="page-item {{ p == current_page ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('app_client_equipments', {
                                        agencyCode: agencyCode,
                                        idContact: client.id_contact,
                                        annee: annee,
                                        visite: visite,
                                        page: p
                                    }) }}">{{ p }}</a>
                                </li>
                            {% endfor %}

                            {% if end_page < total_pages %}
                                {% if end_page < total_pages - 1 %}
                                    <li class="page-item disabled"><span class="page-link">…</span></li>
                                {% endif %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_client_equipments', {
                                        agencyCode: agencyCode,
                                        idContact: client.id_contact,
                                        annee: annee,
                                        visite: visite,
                                        page: total_pages
                                    }) }}">{{ total_pages }}</a>
                                </li>
                            {% endif %}

                            {# Bouton Suivant #}
                            <li class="page-item {{ current_page >= total_pages ? 'disabled' : '' }}">
                                <a class="page-link" 
                                   href="{{ path('app_client_equipments', {
                                       agencyCode: agencyCode,
                                       idContact: client.id_contact,
                                       annee: annee,
                                       visite: visite,
                                       page: current_page + 1
                                   }) }}"
                                   aria-label="Suivant">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>

                    {# Sélecteur items par page #}
                    <div class="text-center mt-2">
                        <small class="text-muted">Afficher 
                            {% for size in [20, 50, 100] %}
                                {% if size == per_page %}
                                    <strong>{{ size }}</strong>
                                {% else %}
                                    <a href="{{ path('app_client_equipments', {
                                        agencyCode: agencyCode,
                                        idContact: client.id_contact,
                                        annee: annee,
                                        visite: visite,
                                        page: 1,
                                        limit: size
                                    }) }}">{{ size }}</a>
                                {% endif %}
                                {% if not loop.last %} · {% endif %}
                            {% endfor %}
                            par page
                        </small>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endif %}
</div>

{# ============================================================ #}
{# Modale de confirmation de suppression (archivage)             #}
{# ============================================================ #}
{% if is_granted('ROLE_DELETE') or is_granted('ROLE_ADMIN') or is_granted('ROLE_ADMIN_AGENCE') %}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i> Confirmer l'archivage
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir archiver cet équipement ?</p>
                <div class="alert alert-warning mb-0">
                    <strong id="deleteEquipNumero"></strong> — <span id="deleteEquipLibelle"></span>
                    <br><small class="text-muted">L'équipement sera masqué des listes et retiré de la prochaine synchronisation Kizeo. Il restera en base de données pour l'historique.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-1"></i> Annuler
                </button>
                <form id="deleteForm" method="post" action="" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('equipment_delete') }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Archiver
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // =========================================================================
    // Génération PDF Compte Rendu Client
    // =========================================================================
    document.getElementById('btnGeneratePdf').addEventListener('click', function() {
        const btn = this;
        const includePhotos = document.getElementById('includePhotos').checked;
        const url = '{{ path('app_generate_client_pdf', {agencyCode: agencyCode, idContact: client.id_contact}) }}';

        // Feedback visuel
        const originalHtml = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status"></span> Génération en cours...';

        // Construire le body en FormData (POST)
        const formData = new FormData();
        formData.append('annee', '{{ annee }}');
        formData.append('visite', '{{ visite }}');
        formData.append('include_photos', includePhotos ? '1' : '0');

        fetch(url, {
            method: 'POST',
            body: formData,
        })
        .then(response => {
            if (!response.ok) {
                // Essayer de lire le JSON d'erreur
                return response.json().then(data => {
                    throw new Error(data.error || 'Erreur lors de la génération du PDF');
                });
            }
            return response.blob();
        })
        .then(blob => {
            // Ouvrir le PDF dans un nouvel onglet
            const pdfUrl = URL.createObjectURL(blob);
            window.open(pdfUrl, '_blank');
        })
        .catch(error => {
            alert('Erreur : ' + error.message);
            console.error('PDF generation error:', error);
        })
        .finally(() => {
            btn.disabled = false;
            btn.innerHTML = originalHtml;
        });
    });

    // =========================================================================
    // Modale de suppression : injecter les données de l'équipement cliqué
    // =========================================================================
    const deleteModal = document.getElementById('deleteModal');
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const equipId = button.getAttribute('data-equip-id');
            const equipNumero = button.getAttribute('data-equip-numero');
            const equipLibelle = button.getAttribute('data-equip-libelle');

            // Mettre à jour le contenu de la modale
            document.getElementById('deleteEquipNumero').textContent = equipNumero;
            document.getElementById('deleteEquipLibelle').textContent = equipLibelle;

            const form = document.getElementById('deleteForm');
            const baseUrl = '{{ path('app_equipment_delete', {agencyCode: agencyCode, idContact: client.id_contact, equipId: 99999999}) }}';
            form.action = baseUrl.replace('99999999', equipId);
        });
    }
</script>
{% endblock %}
